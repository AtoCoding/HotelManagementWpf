<Window x:Class="Wpf_Hms.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Hms"
        mc:Ignorable="d"
        Title="Login Window"
        Height="540" Width="855"
        Background="AliceBlue"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Canvas>
        <Rectangle Canvas.Left="138" Canvas.Top="87" Height="350" Width="580" Fill="AntiqueWhite" Stroke="Black" RadiusX="20" RadiusY="20" />
        <Label Content="Log in" Width="230" Canvas.Left="312" Canvas.Top="87" FontWeight="ExtraBold" FontSize="40" Foreground="#ff4500" HorizontalContentAlignment="Center" />

        <Label Content="Email" Height="45" Width="107" Foreground="#ff4500" FontSize="15" Canvas.Left="164" Canvas.Top="182" />
        <TextBox x:Name="txtEmail" Height="45" Width="374" TextWrapping="Wrap" TabIndex="0" Canvas.Left="240" Canvas.Top="182" />

        <Label Content="Password" Height="45" Width="107" Foreground="#ff4500" FontSize="15" Canvas.Left="164" Canvas.Top="262" />
        <TextBox x:Name="txtPassword" Height="45" Width="374" TextWrapping="Wrap" TabIndex="1" Canvas.Left="241" Canvas.Top="262" />

        <Button x:Name="LoginButton" Content="Login" Height="55" Width="230" TabIndex="2" Click="LoginButton_Click" Canvas.Left="185" Canvas.Top="350" />
        <Button x:Name="QuitButton" Content="Quit" Height="55" Width="230" TabIndex="3" Click="QuitButton_Click" Canvas.Left="445" Canvas.Top="350" />
    </Canvas>
</Window>
